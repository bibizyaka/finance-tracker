<% if params[:action] == 'search' %> <!-- only if action search(def search from stock controller) --> 
  <div class="results-block">
    <%= bootstrap_flash %>
  </div>
<% end %>
<% if @stock %>
  <div class="result-block">
      <strong>Symbol: </strong><%= @stock.ticker %>
      <strong>Name: </strong><%= @stock.name %>
      <strong>Price: </strong><%= @stock.last_price %>
      
      <% if current_user.can_add_stock?(@stock.ticker) %>
        <%= link_to "Add to my stocks", user_stocks_path(user: current_user, stock_ticker: @stock.ticker), class: "btn btn-xs btn-success", method: :post %>
      <% else %>
         <span class="label label-default">
           Already added 
           <% if !current_user.under_stock_limit? %>
             10 stocks
           <% end %>
           <% if current_user.stock_already_added?(@stock.ticker) %>
             this stock
           <% end %>
         </span>
      <% end %>
  </div>
  <div class="margin-bottom30"></div>
<% end %>