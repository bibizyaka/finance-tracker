<h1>Stocks</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <% if current_user.id == @user.id %>
        <th>Actions</th>
      <% end %>
    </tr>
    <tbody>
      <% @user_stocks.each do |user_stock| %>
        <tr>
          <td><%=user_stock.name %></td>
          <td><%=user_stock.ticker %></td>
          <td><%=user_stock.last_price %></td>
          <% if @user.id == current_user.id %>
            <td><%= link_to "Remove Stock", user_stock_path(user_stock), method: :delete,
                                            data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-xs" %>
            </td>
            <% end %>
        </tr>
      <% end %>
    </tbody>
  </thead>
  
</table>